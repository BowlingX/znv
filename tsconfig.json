{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}